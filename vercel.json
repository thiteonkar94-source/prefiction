{
  "version": 2,
  "buildCommand": "cd server && npm install",
  "outputDirectory": ".",
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/server/server.js"
    },
    {
      "source": "/admin/submissions",
      "destination": "/server/server.js"
    }
  ],
  "env": {
    "MONGODB_URI": "@mongodb_uri",
    "ADMIN_API_KEY": "@admin_api_key",
    "NODE_ENV": "production"
  }
}
